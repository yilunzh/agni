<h1></h1>

<%= form_for search_path, method: :get, html: { class: "form-inline" } do |f| %>
	<div class="form-group">
		<%= f.label :bodytype %>
		<%= f.select(:bodytype, @bodytypes) %>
	</div>

	<div class="form-group">
		<%= f.label "min year" %>
		<%= f.text_field :minyear %>
	</div>

	<div class="form-group">
		<%= f.label "max year" %>
		<%= f.text_field :maxyear %>
	</div>

	<%= submit_tag "search", name: nil, class: "btn btn-primary", id: "search_button", data: { disable_with: 'Searching...'} %> 

<% end %>

<% @results.each do |result| %>
	<div class="vehicle">
		<div class="img">
			<%= image_tag "#{result[:photo]}", class: "hero" %>
		</div>
		<div class="desc">
			<%= "#{result[:modelyear]['year']} #{result[:make]["name"]} #{result[:modelyear]['name']} #{result[:style]['name']}" %>
		</div>
		<div class="rating">
			<%= "Rating: #{result[:rating]}" %><br/>
			<%= "Review Count: #{result[:reviews_count]}" %>
		</div>
		<br />
	</div>
<% end %>


